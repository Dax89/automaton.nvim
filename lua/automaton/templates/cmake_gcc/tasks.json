{
    version: "1.0.0",

    tasks: [
        {
            name: "Configure",
            type: "shell",

            command:[
                "cmake -S . -B ${ws.build_dir} -DCMAKE_EXPORT_COMPILE_COMMANDS=1 -DCMAKE_BUILD_TYPE=${state.build_mode}",
                "cp ${ws.build_dir}/compile_commands.json ${workspace_folder}"
            ],

            cwd: "${workspace_folder}"
        },
        {
            name: "Build",
            type: "shell",
            command: "cmake --build . --config ${state.build_mode} -j${number_of_cores}",
            cwd: "${ws.build_dir}",
            default: true,
            quickfix: true,

            problems: {
                ignoreoutput: false,
                patterns: ["${globals.patterns.gcc}"]
            }
        }
    ]
}
